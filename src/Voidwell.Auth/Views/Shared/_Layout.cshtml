@using IdentityServer4.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        var user = Context.User;
        name = user?.FindFirst("name")?.Value;
    }
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Voidwell</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/svg+xml" href="~/images/voidpunk.svg?v1" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="https://voidwell.com">
                    <span class="navbar-brand">
                        <img src="~/images/logo-text.png" class="brand-text" alt="Voidwell">
                        <div class="logo-wrapper pull-left">
                            <svg class="logo" viewBox="0 0 1031 422" xmlns="http://www.w3.org/2000/svg">
                                <path d="M0,0H304L515,292,726,0h305L727,422,638,299l46-65,43,58L883,75H766L515,422,264,75H148L304,292l43-58,46,65L304,422ZM515,0l84,115-46,65-38-51-37,51-46-65Z" />
                            </svg>
                        </div>
                    </span>
                </a>
            </div>

            @if (name != null)
            {
                <ul class="nav navbar-nav">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">@name <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a asp-action="Logout" asp-controller="Logout">Logout</a></li>
                        </ul>
                    </li>
                </ul>
            }
        </div>
    </div>

    <div>
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
